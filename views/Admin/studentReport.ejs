<%- include('../Includes/begin.ejs') %>

    <link rel="stylesheet" href="../../CSS/admin-dashboard.css">
    <div class="container-fluid">

        <div id="wrapper">

            <%- include('../Includes/admin_nav.ejs') %>

                <section id="content-wrapper">
                    <main role="main" class="pt-5 main">

                        <div class="main-content">
                            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                                style="height: 100px; background-size: cover; background-position: center top;">

                            </div>
                            <div class="container-fluid mt--7">
                                <div class="row">
                                    <div class="col-xl-12 order-xl-1">
                                        <div class="card bg-secondary shadow">
                                            <div class="card-header bg-white border-0">
                                                <div class="row align-items-center">
                                                    <div class="col-8">
                                                        <h3 class="mb-0" style="color: brown;">See Student Report</h3>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-body">

                                                <form action="/admin/addStudent" method="POST">
                                                    <h6 class="heading-small text-muted mb-4">Student information</h6>
                                                    <div class="pl-lg-4">
                                                        
                                                
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Attendance Date</th>
                <th scope="col">Course</th>
                <th scope="col">Type</th>
                <th scope="col">Department</th>
                <th scope="col">Course Name</th>
                <th scope="col">Semester</th>
                <th scope="col">Student Name</th>
            </tr>
        </thead>
        <tbody id="studentTable">
            <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td>
                        <%= i + 1 %>
                    </td>
                    <td>
                        <%= data[i].AttendanceDate %>
                    </td>
                    <td>
                        <%= data[i].Course %>
                    </td>
                    <td>
                        <%= data[i].Type %>
                    </td>
                    <td>
                        <%= data[i].Department %>
                    </td>
                    <td>
                        <%= data[i].CourseName %>
                    </td>
                    <td>
                        <%= data[i].Semester %>
                    </td>
                    <td>
                        <%= data[i].StudentName %>
                    </td>
              
                </tr>
                <% } %>
        </tbody>
    </table>
</div>
</form>

                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>




                    </main>
                </section>

        </div>

    </div>


    <%- include('../Includes/admin_end.ejs') %>